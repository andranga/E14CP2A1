<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company_path(company.id) %></td>
        <td><%= link_to 'Edit', edit_company_path(company.id), class: "btn-primary" %></td>
        <td><%= button_to 'Destroy', company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-primary" %></td>
      </tr>
    <% end %>
    <tr>
      <td><h4>No. Employees:</h4></td>
      <td><%= @count %></td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
